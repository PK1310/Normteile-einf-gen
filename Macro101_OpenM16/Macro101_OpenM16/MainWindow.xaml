<Window x:Class="Macro101_OpenM16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Macro101_OpenM16"
        mc:Ignorable="d"
        Title="Schrauben M16" Height="400" Width="600" ResizeMode="NoResize" Background="LightBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.7*"/>
            </Grid.RowDefinitions>
            <Label Content="Welche Klemmstärke wird benötigt ?" FontSize="16" FontWeight="Bold"/>
            <TextBox x:Name="txtBox_Laenge" Grid.Row="1" Width="120" Margin="2" HorizontalAlignment="Left" FontSize="24" />
            <Label Grid.Row="1" Content="in ganzen mm angeben (max.56mm)" FontSize="15" VerticalAlignment="Center" Margin="125,0,0,0"/>
            <Label Grid.Row="2" Content="Vorgeschlagene Schraubenlänge ist ..." FontSize="16"/>
        </Grid>
        <Button x:Name="btn_Laenge" Grid.Column="3" Grid.Row="1" Margin="0,20,0,20" Content="Schraubenlänge vorschlagen" Click="btn_Laenge_Click"/>
        <Button x:Name="btn_M16x25" Grid.Column="1" Grid.Row="2" Margin="5" Content="M16x25" FontSize="24" Click="btn_M16x25_Click"/>
        <Button x:Name="btn_M16x30" Grid.Column="1" Grid.Row="3" Margin="5" Content="M16x30" FontSize="24" Click="btn_M16x30_Click"/>
        <Button x:Name="btn_M16x35" Grid.Column="1" Grid.Row="4" Margin="5" Content="M16x35" FontSize="24" Click="btn_M16x35_Click"/>
        <Button x:Name="btn_M16x40" Grid.Column="1" Grid.Row="5" Margin="5" Content="M16x40" FontSize="24" Click="btn_M16x40_Click"/>
        <Button x:Name="btn_M16x45" Grid.Column="2" Grid.Row="2" Margin="5" Content="M16x45" FontSize="24" Click="btn_M16x45_Click"/>
        <Button x:Name="btn_M16x50" Grid.Column="2" Grid.Row="3" Margin="5" Content="M16x50" FontSize="24" Click="btn_M16x50_Click"/>
        <Button x:Name="btn_M16x55" Grid.Column="2" Grid.Row="4" Margin="5" Content="M16x55" FontSize="24" Click="btn_M16x55_Click"/>
        <Button x:Name="btn_M16x60" Grid.Column="2" Grid.Row="5" Margin="5" Content="M16x60" FontSize="24" Click="btn_M16x60_Click"/>
        <Button x:Name="btn_M16x65" Grid.Column="3" Grid.Row="2" Margin="5" Content="M16x65" FontSize="24" Click="btn_M16x65_Click"/>
        <Button x:Name="btn_M16x70" Grid.Column="3" Grid.Row="3" Margin="5" Content="M16x70" FontSize="24" Click="btn_M16x70_Click"/>
        <Button x:Name="btn_M16x80" Grid.Column="3" Grid.Row="4" Margin="5" Content="M16x80" FontSize="24" Click="btn_M16x80_Click"/>
        <Button x:Name="btn_M16x90" Grid.Column="3" Grid.Row="5" Margin="5" Content="M16x90" FontSize="24" Click="btn_M16x90_Click"/>
    </Grid>
</Window>
